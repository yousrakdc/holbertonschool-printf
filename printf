#include "main.h"

int _printf(const char *format, ...) {
    va_list args;
    int count = 0;

    va_start(args, format);

    while (*format != '\0') {
        if (*format == '%') {
            format++; // Passer au caractère suivant après '%'
            switch (*format) {
                case 'c':
                    putchar(va_arg(args, int)); // Afficher le caractère
                    count++;
                    break;
                case 's':
                    while (*va_arg(args, char *)) {
                        putchar(*va_arg(args, char *)); // Afficher chaque caractère de la chaîne
                        count++;
                    }
                    break;
                case '%':
                    putchar('%'); // Afficher le caractère '%'
                    count++;
                    break;
            }
        } else {
            putchar(*format); // Afficher le caractère normal
            count++;
        }
        format++;
    }

    va_end(args);
    return count;
}

int main() {
    int charCount = _printf("Exemple de fonction _printf avec des commentaires en français : %% %c %s\n", 'A', "Bonjour");
    printf("Nombre de caractères imprimés : %d\n", charCount);
    return 0;
}

